<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="80dp"
    android:layout_marginLeft="10dp"
    >

    <ImageView
        android:id="@+id/iv_contactphoto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:src="@drawable/usephone"></ImageView>

    <TextView
        android:id="@+id/contactname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_contactphoto"
        android:text="xuechen zhang"
        android:textSize="25sp"></TextView>


    <TextView
        android:id="@+id/contactphone"
        android:layout_width="198dp"
        android:layout_height="46dp"
        android:layout_below="@+id/contactname"

        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@+id/iv_contactphoto"
        android:text="123456789923"
        android:textAllCaps="true"
        android:textSize="25sp"></TextView>

    <Button
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/contactphone"
        android:layout_centerVertical="true"
        android:background="#FF8300"
        android:text="添加"
        android:textColor="@color/white"
        android:textSize="25sp"></Button>
</RelativeLayout>